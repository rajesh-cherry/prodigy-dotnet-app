
@{
    ViewBag.Title = "RetriveAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <style>
        #snackbar {
            width: 100%;
            background-color: #FF3B30;
            color: #fff;
            text-align: center;
            border-radius: 2px;
            padding: 16px;
            position: absolute;
            z-index: 1;
            right: 0%;
            bottom: -80px;
            font-size: 17px;
        }

            #snackbar.show {
                visibility: visible;
                -webkit-animation: fadein 0.5s, fadeout 0.5s 2.5s;
                animation: fadein 0.5s, fadeout 0.5s 2.5s;
            }
    </style>
    <script>
        function myFunction() {
            var x = document.getElementById("snackbar");
            x.className = "show";
            setTimeout(function () { x.className = x.className.replace("show", ""); }, 3000);
        }
    </script>

}

<script src="~/Scripts/Account/Retrieve.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>

<div class="mt_top">
    <h3 class="text-center mt_top">Retrieve Account</h3>
    <p style="font-size:14px;font-weight:400;text-align:center;color:#333333">
        Please enter the following information to identify <br />your account. This must match the information <br /> you provide during registration.
    </p>
    <input type="hidden" id="hnProdUrl" value='@System.Web.Configuration.WebConfigurationManager.AppSettings["AccountPayURL"]' />
    <input type="hidden" id="getbrandUrl" value='@System.Web.Configuration.WebConfigurationManager.AppSettings["BrandCode"]' />

    <form id="retriveform" class="form_style">

        <div class="form-group">
            <label for="usr">Last Name</label>
            <input placeholder="Last Name" type="text" class="form-control" id="txtLastName" name="txtLastName">
            <span id="errorLastName" class="error"></span>
        </div>
        <div class="row">
            <div class="form-group col-xl-6">
                <label for="usr">Service Street No</label>
                <input placeholder="Service street no" type="text" class="form-control" id="txtStreetNo" name="txtStreetNo">
                <span id="errorstreetNo" class="error"></span>
            </div>
            <div class="form-group col-xl-6">
                <label for="usr">Service Zip Code</label>
                <input placeholder="Service zip code" type="text" class="form-control" id="txtZipCode" name="txtZipCode">
                <span id="errorZipCode" class="error"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="usr">Phone Number</label>
            <input placeholder="Phone Number" type="text" class="form-control" id="txtEmail" name="txtEmail">
            <span id="errorEmailOrPhone" class="error"></span>
        </div>

        <div class="text-center">
            <button type="button" id="btnNext" data-toggle="modal" class="btnNext btn btn_primary_outline mt-5 w-50 " onclick="myFunction()">
                Continue
            </button>
        </div>
        <div id="snackbar" style="display:none" class="text-center">
            <h6 class="font-weight-bold">Account Not Found</h6>
            <h6 class="font-weight-normal">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do <br /> eiusmod tempor incididunt</h6>
        </div>
        <div class="modal" id="myModal">

            <div class="modal-dialog modal-dialog-centered ">
                <div class="modal-content">


                    <div class="modal-header border border-bottom-0 justify-content-center">
                        <h4 class="modal-title">Oops Account Not Found </h4>
                    </div>


                    <div class="modal-body text-center">
                        No Account Found With the Provided Data
                    </div>


                    <div class="modal-footer border border-top-0  justify-content-center">
                        <button type="button" id="btnretry" class="btn btn_primary  pl-5 pr-5" data-dismiss="modal">Retry</button>
                    </div>

                </div>
            </div>
        </div>
        <div class="modal" id="myModal1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header border border-bottom-0 justify-content-center">
                        <h4 class="modal-title">Account No. </h4>
                    </div>

                    <div class="modal-body text-center">
                        Your account retrieved sucessfully
                        <br />
                        Please confirm to continue
                    </div>

                    <div class="modal-footer border border-top-0 justify-content-center">
                        <button type="button" id="btncancel" class="btn btn_primary_outline pl-5 pr-5" data-dismiss="modal">Cancel</button>
                        <button type="button" id="btnconfirm" class="btn btn_primary pl-5 pr-5 ml-3" data-dismiss="modal">Confirm</button>
                    </div>

                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="AjaxLoader" style="display: none;">
    </div>
</div>