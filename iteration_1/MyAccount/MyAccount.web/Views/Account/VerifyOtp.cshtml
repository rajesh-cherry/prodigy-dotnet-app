
@{
    ViewBag.Title = "VerifyOtp";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

    <script src="~/Scripts/Account/VerifyOtp.js"></script>
    <style>
        .otp_text {
            width: 40px;
            height: 40px;
            border: 1px solid #828282;
            background-color: #FAFBFC;
            text-align: center;
        }
    </style>
}
<input type="hidden" id="hnProdUrl" value='@System.Web.Configuration.WebConfigurationManager.AppSettings["AccountPayURL"]' />
<input type="hidden" id="getbrandUrl" value='@System.Web.Configuration.WebConfigurationManager.AppSettings["BrandCode"]' />

<div class="mt_top">
    <h5 class="text-center font-weight-bold mb-0">Enter Verification Code</h5>
    <h6 class="mt-3 font-weight-normal text-center text_grey mb-0">
        Please enter the 6-digit code we sent to your
        registered phone number.
    </h6>
    <form class="form_style mt-0" id="verifyOtpForm">
        <div class="form-group" style="text-align:center">
            <label for="usr" id="phone"></label>
        </div>
        <div class="form-group text-center">
            <input type="text" class="form-control d-inline otp_text inputs" placeholder="" maxlength="1" id="digit1" />
            <input type="text" class="form-control d-inline otp_text ml-2 inputs" placeholder="" maxlength="1" id="digit2" />
            <input type="text" class="form-control d-inline otp_text ml-2 inputs" placeholder="" maxlength="1" id="digit3" />
            <input type="text" class="form-control d-inline otp_text ml-2 inputs" placeholder="" maxlength="1" id="digit4" />
            <input type="text" class="form-control d-inline otp_text ml-2 inputs" placeholder="" maxlength="1" id="digit5" />
            <input type="text" class="form-control d-inline otp_text ml-2 inputs" placeholder="" maxlength="1" id="digit6" />
        </div>
        <span id="Error" class="error"></span>

        <div class="d-flex justify-content-center">
            <button type="button" id="btnNext" class="btn mt_90 w-50 btn_primary_outline btnNext">Continue</button>
        </div>
    </form>
    <div class="loader" id="AjaxLoader" style="display: none;">
    </div>

    <div class="p-3 flex-row" id="gridverifycode" style="background: #D9ECE1; border-radius: 3px; position: absolute; top: 16px; right: 16px;display: none;">
        <i class="fas fa-check-circle text_success font_22 align-top"></i>
        <div class="ml-3 d-inline-block">
            <h6 class="font-weight-bold text_success mb-2">Verification Code Sent</h6>
            <p class="font-weight-notmal font_14 text_success mb-2">6-digit verification code sent to your registered phone number</p>
            <button class="font_14 pl-3 pr-3 mb-0 btn_primary btn " id="successmsgclose">Done</button>
        </div>
    </div>
</div>

<div class="mt_bottom text-center" style="margin-top:8%;">
    <h6 class="font-weight-normal" id="resend1">Resend - <span id="timer">00:30</span> </h6>
    <p class="font_18 font-weight-bold text_primary" id="resendBtn" onclick="updateTimerValue()" style="display: none;cursor:pointer">Resend</p>
 </div>

