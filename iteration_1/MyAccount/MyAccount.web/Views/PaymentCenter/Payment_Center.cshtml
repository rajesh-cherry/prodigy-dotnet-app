
@{
    ViewBag.Title = "Payment_Center";
    Layout = "~/Views/Shared/Header_Layout.cshtml";

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

    <script>
        $(document).ready(function () {
            $("#show_table").click(function () {
                $("#price_notify").toggle();
            });
            $("#close").click(function () {
                $("#price_notify").hide();
            });
            $("#close_1").click(function () {
                $("#price_notify").hide();
            });




        });

    </script>
}

<input type="hidden" id="paymentUIIFrameUrl" value='@System.Web.Configuration.WebConfigurationManager.AppSettings["PaymentUIURL"]' />
<input id="getbrandUrl" value="@System.Configuration.ConfigurationManager.AppSettings["BrandCode"]" style="display:none" />
<input type="hidden" id="baseURL" value='@System.Web.Configuration.WebConfigurationManager.AppSettings["baseURL"]' />

<div class="container pl-0 pr-0 padding_tb Payment">
    <div class="row pt-3">
        <div class="col-xl-6 col-md-12 col-lg-7">
            <i class='fas fa-arrow-left font_20'></i>
            <h4 class="ml-3 font-weight-normal d-inline">Payment Center</h4>
        </div>

    </div>

    <!-- Tab panes -->


    <div class="row">
        <div class="col-xl-6 col-lg-12 col-md-12 mt-3">
            <div class="bg-white p-3 border_radius_8 table-responsive">
                <table class="table table-borderless position-relative">
                    <tbody>
                        <tr>
                            <td class="text-left"><h4 class="font-weight-normal">Current account balance</h4> <p class="font_12">Estimated for next 5 days &nbsp;&nbsp; <i class="far fa-question-circle font_16" id="show_table"></i></p></td>
                            <th class="text-right"><h3 class="font-weight-bold d-inline">$ 123.45</h3></th>
                        </tr>
                        <tr>
